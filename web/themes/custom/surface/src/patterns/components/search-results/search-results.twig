{{ attach_library('surface/search-results') }}

{% set title_classes = [
  'search-result__title',
  title_attributes ? title_attributes.class
]|join(' ')|trim %}

{% set content_classes = [
  'search-result__snippet',
  'text-content',
  content_attributes ? content_attributes.class
]|join(' ')|trim %}

{% if title %}
  {{ title_prefix }}
  <h3 class="{{ title_classes }}" {{ title_attributes ? title_attributes|without('class') }}>
    <a href="{{ url }}">{{ title }}</a>
  </h3>
  {{ title_suffix }}
{% endif %}

{% if snippet %}
  <div class="{{ content_classes }}" {{ content_attributes ? content_attributes|without('class') }}>{{ snippet }}</div>
{% endif %}
